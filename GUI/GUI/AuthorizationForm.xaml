<Window x:Name="authorizationForm" x:Class="GUI.AuthorizationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоизация" Height="159.5" Width="288" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Resorses/key.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txbxLogin" HorizontalAlignment="Left" Height="23" Margin="66,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" TabIndex="0"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="17,11,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Height="26"/>
        <Button x:Name="btnEnter" Content="Войти" HorizontalAlignment="Left" Margin="107,85,0,0" VerticalAlignment="Top" Width="76" Height="28" Click="btnEnter_Click" TabIndex="2"/>
        <PasswordBox x:Name="txbxPassword" HorizontalAlignment="Left" Margin="66,43,0,0" VerticalAlignment="Top" Width="186" Height="25" TabIndex="1"/>

    </Grid>
</Window>
